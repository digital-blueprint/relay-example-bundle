{
    "name": "dbp/relay-example-bundle",
    "description": "An example bundle for the Relay API gateway",
    "type": "symfony-bundle",
    "license": "AGPL-3.0-or-later",
    "require": {
        "php": ">=8.1",
        "ext-json": "*",
        "api-platform/core": "^2.7",
        "dbp/relay-core-bundle": "^0.1.127",
        "symfony/config": "^5.4",
        "symfony/console": "^5.4",
        "symfony/dependency-injection": "^5.4",
        "symfony/http-kernel": "^5.4",
        "symfony/http-foundation": "^5.4",
        "symfony/framework-bundle": "^5.4"
    },
    "require-dev": {
        "friendsofphp/php-cs-fixer": "^3.50",
        "phpstan/phpstan": "^1.10.59",
        "phpstan/phpstan-phpunit": "^1.3.16",
        "phpunit/phpunit": "^10.0.0",
        "symfony/browser-kit": "^5.4.35",
        "symfony/http-client": "^5.4.36",
        "symfony/monolog-bundle": "^3.10",
        "symfony/phpunit-bridge": "^5.4.36",
        "vimeo/psalm": "^5.22.2",
        "symfony/error-handler":"^5.4.36",
        "symfony/monolog-bridge":"^5.4.35"
    },
    "autoload": {
        "psr-4": {
            "Dbp\\Relay\\ExampleBundle\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Dbp\\Relay\\ExampleBundle\\Tests\\": "tests/"
        }
    },
    "config": {
        "sort-packages": true,
        "platform": {
            "php": "8.1"
        }
    },
    "scripts": {
        "test": [
            "@php vendor/bin/phpunit"
        ],
        "phpstan": [
            "@php vendor/bin/phpstan analyze --ansi"
        ],
        "psalm": [
            "@php vendor/bin/psalm"
        ],
        "lint": [
            "@composer run cs",
            "@composer run phpstan",
            "@composer run psalm"
        ],
        "cs-fix": [
            "@php vendor/bin/php-cs-fixer --ansi fix"
        ],
        "cs": [
            "@php vendor/bin/php-cs-fixer --ansi fix --dry-run --diff"
        ],
        "coverage": [
            "@php vendor/bin/phpunit --coverage-html _coverage"
        ]
    }
}
